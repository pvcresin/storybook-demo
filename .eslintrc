parserOptions:
  ecmaVersion: 6
  sourceType: 'module'
  ecmaFeatures:
    jsx: true
    modules: true
settings:
  react:
    version: 16.5.0
rules:
  comma-dangle:
    - error
    - "always-multiline"
  indent:
    - error
    - 2
  quotes:
    - error
    - single
  linebreak-style:
    - error
    - unix
  semi:
    - error
    - always
  block-scoped-var: error
  default-case: error
  eqeqeq: error
  no-multi-spaces:
    - error
    - exceptions:
        Property: true
        VariableDeclarator: true
        ImportDeclaration: true
  no-warning-comments:
    - warn
    -
      terms:
        - "todo"
        - "fixme"
      location: "start"
  space-before-blocks: error
  arrow-parens:
    - error
    - "always"
  arrow-spacing:
    - error
    - before: true
      after: true
  constructor-super: error
  no-var: error
  array-bracket-spacing:
    - error
    - "never"
  block-spacing:
    - error
    - "always"
  brace-style:
    - error
    - "1tbs"
    - allowSingleLine: true
  camelcase:
    - error
    - properties: "always"
  jsx-quotes: 
    - error
    - "prefer-single"
  no-console: error
  no-debugger: error
  no-underscore-dangle: error
  getter-return:
    - error
    - allowImplicit: true
  react/forbid-prop-types: error
  react/prop-types: warn
env:
  es6: true
  node: true
  browser: true
  mocha: true
  jquery: true
  commonjs: true
globals:
  expect: true
extends:
  - 'eslint:recommended'
  - 'plugin:react/recommended'
plugins:
  - react
